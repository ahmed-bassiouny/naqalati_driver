<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/driver"
    android:fillViewport="true"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context="com.ahmed.naqalati_driver.activities.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="بيانات السيارة"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="اسم المالك"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_owner_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="رقم موبايل المالك"
            android:lines="1"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="المحافظة"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_we7da_meror_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="وحدة المرور"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_car_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="رقم السيارة"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/car_type"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sp_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:entries="@array/car_type_value"
                android:gravity="center"
                android:orientation="vertical"></Spinner>
        </LinearLayout>

        <EditText
            android:id="@+id/et_shaceh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="شاسية"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_mator_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="موتور"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="الحمولة"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_car_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_edit_text"
            android:lines="1"
            android:hint="موديل السيارة"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accept"
            android:text="موافق على شروط الاستخدام"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#2450b7"
            android:textSize="15sp"
            android:layout_margin="20sp"
            android:id="@+id/show_permission"
            android:text="لمشاهدة شروط الاستخدام اضغط هنا"/>


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border_button"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
